# ============================================
# ClarityClaim AI - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# =================================
# Frontend Configuration (Vite)
# =================================
# API URL for frontend to call backend
VITE_API_URL=http://localhost:3001/api

# Supabase Configuration (for frontend auth)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# =================================
# Backend/API Configuration
# =================================
# Supabase Service Role (for backend API operations)
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =================================
# HubSpot CRM Integration (Optional)
# =================================
# Get your Private App access token from HubSpot:
# Settings → Integrations → Private Apps → Create private app
# Required scopes: crm.objects.contacts.read, crm.objects.contacts.write,
#                  crm.objects.deals.read, crm.objects.deals.write
HUBSPOT_ACCESS_TOKEN=your-hubspot-private-app-token

# =================================
# AI Services (Optional)
# =================================
# Configure these to enable AI-powered features
# If not configured, the app will use template-based generation

# AI Appeal Generation Service URL
AI_APPEALS_URL=

# AI Denial Risk Prediction Service URL
AI_DENIAL_RISK_URL=

# API Key for AI services (if required)
AI_API_KEY=

# =================================
# Server Configuration
# =================================
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# =================================
# Railway/Vercel Deployment
# =================================
# These are automatically set by the platform
# PUBLIC_URL=https://your-app.railway.app
