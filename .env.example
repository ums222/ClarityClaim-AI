# =========================================
# ClarityClaim AI - Environment Variables
# =========================================
# Copy this file to .env and fill in your values
# Different values needed for Vercel (marketing) vs Railway (app)

# =========================================
# DEPLOYMENT MODE
# =========================================
# Set to 'true' on Railway (app subdomain), 'false' on Vercel (marketing)
VITE_IS_APP=false

# =========================================
# API Configuration
# =========================================
# Development: http://localhost:3001/api
# Vercel Production: /api (relative, uses serverless functions)
# Railway Production: https://your-railway-app.railway.app/api
VITE_API_URL=http://localhost:3001/api

# =========================================
# App URL (for login/signup links from landing page)
# =========================================
# This should point to your Railway app (web app)
# Production: https://app.apclaims.net
# Development: http://localhost:5173
VITE_APP_URL=https://app.apclaims.net

# =========================================
# Marketing URL (for links from web app to marketing)
# =========================================
# This should point to your Vercel deployment (marketing site)
# Production: https://www.apclaims.net
# Development: http://localhost:5173
VITE_MARKETING_URL=https://www.apclaims.net

# =========================================
# Supabase Configuration (Frontend - ANON KEY)
# =========================================
# Get these from: https://app.supabase.com/project/_/settings/api
# The anon key is safe to expose in frontend code (RLS protects data)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# =========================================
# Stripe Configuration (Frontend - PUBLISHABLE KEY)
# =========================================
# Get from: https://dashboard.stripe.com/apikeys
# Use test keys for development (pk_test_...), live keys for production (pk_live_...)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# =========================================
# BACKEND-ONLY VARIABLES (Not exposed to frontend)
# =========================================
# These should be set in Railway/Vercel dashboard, not in frontend .env

# Supabase Service Role Key (NEVER expose to frontend!)
# SUPABASE_URL=https://your-project-id.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe Secret Key (NEVER expose to frontend!)
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Google AI / Gemini API Key
# GOOGLE_AI_API_KEY=your-google-ai-api-key

# HubSpot Integration
# HUBSPOT_ACCESS_TOKEN=your-hubspot-private-app-token
