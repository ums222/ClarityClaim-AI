{
  "name": "clarityclaim-web-app",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter api dev\"",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm --filter api build && pnpm --filter web build",
    "lint": "pnpm --filter web lint && pnpm --filter api lint"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.5.0"
  },
  "workspaces": [
    "api",
    "web"
  ]
}
